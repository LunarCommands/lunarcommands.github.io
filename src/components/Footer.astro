---
import avatar from "../assets/avatar-reduce-removebg.webp";
---

<div class="w-4/5 mx-auto h-0.5 mb-12">
    <div class="w-full h-full bg-gradient-to-r from-white to-yellow-600"></div>
</div>
<footer class="mb-16">
    <div class="max-w-screen-xl px-4 pt-8 mx-auto sm:px-6 lg:px-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <div class="flex justify-center text-teal-300 sm:justify-start">
                <a href="/">
                    <img
                        class="rounded-full m-4"
                        src={avatar.src}
                        alt="Lunar Commands logo"
                        width="40"
                        height="40"
                    /></a
                >
            </div>

            <span
                class="block text-sm text-gray-500 text-center dark:text-gray-400"
            >
                © 2023 Lunar Commands™. All Rights Reserved.
            </span>
        </div>
    </div>
</footer>
