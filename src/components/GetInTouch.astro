<section>
    <div
        class="max-w-lg bg-transparent px-4 pt-24 py-8 mx-auto text-left md:max-w-none md:text-center"
    >
        <h1
            class="font-extrabold leading-10 tracking-tight text-white text-center sm:leading-none md:text-6xl text-4xl lg:text-7xl"
        >
            <span class="inline md:block">Do you want a website?</span>
            <span
                class="mt-2 bg-clip-text text-transparent bg-gradient-to-r from-yellow-200 to-yellow-500 animate-gradient md:inline-block"
            >
                Contact<span
                    class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-500 to-yellow-100 animate-gradient"
                >
                    Me!</span
                >
            </span>
        </h1>
        <div
            class="mx-auto rounded-lg font-black mt-5 text-zinc-400 md:mt-12 md:max-w-lg text-center lg:text-lg"
        >
            <div class="flex gap-4 mt-10 mx-4 justify-center">
                <a href="/contact">
                    <button
                        class="font-medium text-[16px] flex items-center px-5 py-3 md:py-4 md:px-8 rounded-xl capitalize bg-gradient-to-r from-gray-500 to-yellow-400 hover:from-gray-500 hover:to-yellow-500 relative gap-2 transition duration-300 hover:scale-105 text-white shadow-glass"
                    >
                        Get In Touch

                        <span
                            class="animate-ping absolute right-0 top-0 w-3 h-3 rounded-full bg-gradient-to-r from-orange-400 to-orange-700"
                        ></span></button
                    ></a
                >
            </div>
        </div>
    </div>
</section>
