---
const { frontmatter } = Astro.props;
import { Image } from "astro:assets";
import Technology from "../components/Technology.astro";

const { title, description, date, author, image, tags } = frontmatter;
---

<section class="text-white flex justify-center items-center h-screen bg-dark">
    <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl font-bold mb-4">{title}</h1>
        <div class="flex justify-center">
            <a href="/blog/" aria-hidden="true" tabindex="-1">
                <Image
                    src={image.src}
                    alt={image.alt}
                    width="400"
                    height="250"
                    format="webp"
                    quality={80}
                    class="mb-4"
                />
            </a>
        </div>
        <div class="mb-4">
            <small class="text-gray-400">
                by {author} on {date}
            </small>
        </div>
        <p class="mb-4">{description}</p>

        <div class="flex items-center justify-center mb-4">
            {tags.map((tag: any) => <Technology name={tag} size="xs" />)}
        </div>
        <div class="text-left">
            <slot />
        </div>
    </div>
</section>
