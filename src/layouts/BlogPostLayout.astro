---
const { frontmatter } = Astro.props
import Technology from '../components/Technology.astro'

const { title, description, date, author, image, tags } = frontmatter
---

<section class="bg-dark m-4 flex h-screen items-center justify-center text-white">
	<div class="mx-auto max-w-3xl text-center">
		<h1 class="mb-4 text-4xl font-bold">{title}</h1>
		<div class="flex justify-center">
			<a href="/blog/" aria-hidden="true" tabindex="-1">
				<img
					src={image.src}
					alt={image.alt}
					width={image.width}
					height={image.height}
					class="mb-4"
				/>
			</a>
		</div>
		<div class="mb-4">
			<small class="text-gray-400">
				by {author} on {date}
			</small>
		</div>
		<p class="mb-4">{description}</p>

		<div class="mb-4 flex items-center justify-center">
			{tags.map((tag: any) => <Technology name={tag} size="xs" />)}
		</div>
		<div class="text-left">
			<slot />
		</div>
	</div>
</section>
