---
import CosmosBackground from "../components/CosmosBackground.svelte";
import Nav from "../components/Nav.svelte";
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="/favicon.png" />
		<meta property="og:title" content="Filip Wolski" />
		<meta
			property="og:image"
			content="https://i.ibb.co/r6SL7hn/Wolski-Filip-reduce.jpg"
		/>
		<meta
			property="og:description"
			content="Portoflio website built by Filip Wolski.
			
		"
		/>
		<meta property="
			'og:url'" content="https://lunarcommands.github.io" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="627" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-800">
		<CosmosBackground client:load animated={true} />
		<Nav client:load />

		<slot />
	</body>
</html>

<script>
	if (typeof window !== "undefined") {
		window.onload = () => {
			window.scrollTo(0, 0);
		};
	}
</script>

<style>
	@font-face {
		font-family: "Inter";
		font-style: normal;
		font-weight: normal;
		font-display: normal;
		src: url("/fonts/Inter-SemiBoldItalic.woff2?v=3.19") format("woff2"),
			url("/fonts/Inter-SemiBoldItalic.woff?v=3.19") format("woff");
	}
</style>
