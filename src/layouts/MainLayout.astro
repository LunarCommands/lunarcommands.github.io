---
import CosmosBackground from "../components/CosmosBackground.svelte";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import Nav from "../components/Nav.svelte";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.webp" />
    <meta property="og:title" content="Filip Wolski" />
    <meta
      property="og:image"
      content="https://i.ibb.co/r6SL7hn/Wolski-Filip-reduce.jpg"
    />
    <meta
      property="og:description"
      content="Portoflio website built by Filip Wolski.
			
		"
    />
    <meta property="
			'og:url'" content="https://lunarcommands.github.io" />
    <meta property="og:image:width" content="1200" />
    <ViewTransitions />
    <meta property="og:image:height" content="627" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-800">
    <CosmosBackground client:load />
    <Nav />
    <slot />

    <Footer />

    <style>
      html {
        scrollbar-gutter: stable;
      }
      input {
        font: inherit;
      }
    </style>
